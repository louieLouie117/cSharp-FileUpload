@using FileUpload.Models
@model MainWrapper

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FileUpload</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <header>
        <h1>Hello, FileUpload</h1>
        <p>R2.0</p>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusamus qui odio necessitatibus dignissimos
            assumenda fuga delectus facilis error molestias, dolores voluptatibus ab molestiae alias. Saepe ipsam
            voluptatum deserunt aut ipsum!</p>
        <partial name="newApprenticePartial" model="@Model.Apprentice" />
    </header>

    <div class="allApprentice-container">
        <main>
            <ul>
                <h2>New Team</h2>
                @foreach (var item in ViewBag.ApprenticeList)
                {
                    <li>


                        <img src="~/img/uploads/@(item.UploadName)" alt="">

                        <div>

                            <h2>@item.name</h2>
                            <p>@item.UploadName</p>


                        </div>

                        <header>
                            <a>edit</a>
                            <form asp-controller="Home" asp-action="DeleteImage" method="Post">
                                <input type="text" value="@item.ApprenticeId" asp-for="Apprentice.ApprenticeId">
                                <input type="submit" value="Delete">
                            </form>
                        </header>

                    </li>
                }
            </ul>
        </main>
    </div>
</body>

</html>